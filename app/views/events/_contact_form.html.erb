<%= form_tag('/contact') do %>
	  <%= label_tag :name %>
	  <%= text_field_tag :name,'', :required => true %>
	  <%= label_tag :email %>
	  <%= email_field_tag :email,'',:required => true %>
	  <%= label_tag :telephone %>
	  <%= text_field_tag :telephone,'',:required => true %>
	  <%= label_tag :message %>
	  <%= text_area_tag :message,'',:required => true %>
	  <%= button_tag "Send",:class => "btn1" %>
<% end %>