	<%= render 'events/form_errors',object: @user %>
	<%= form_for(@user) do |f| %>

	   <%= f.label :name %>
	   <%= f.text_field :name %>
	   <%= f.label :email %>
	   <%= f.email_field :email %>
	   <%= f.label :password %>
	   <%= f.password_field :password %>
	    <%= f.label :password_confirm %>
	   <%= f.password_field :password_confirm %>
	   <hr>
	   <% if @user.name == nil %>
	   <%= f.submit 'Sign Up',:class => 'btn btn-primary btn-lg' %>
	   <% else %>
	   	<%= f.submit 'Update',:class => 'btn btn-primary btn-lg' %>
	   	<% end %>
 <% end %>

					